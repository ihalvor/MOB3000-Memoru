<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemoruTest1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Action Bar styling -->
        <item name="android:background">@color/background_gray</item>
        
        <!-- Customize your theme here. -->

        <!-- styler bla. teksten i inputs -->
        <item name="android:colorForeground">@color/white</item>

        <!-- Text -->
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/washed_white</item>

        <!-- Line under input -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>